
    <MudDrawer @bind-Open="_drawerOpen" Elevation="25" ClipMode="DrawerClipMode.Always">
        <NavMenu />
    </MudDrawer>

<MudMainContent>
    
    <MudAppBar Elevation="25">
        <MudIcon Icon="@CustomIcons.BlazorHero" Size="MudBlazor.Size.Large" ViewBox="0 0 500 500" />
        <MudText Typo="Typo.h6" Class="ml-4">Volgor Cloud</MudText>
        <MudToolBar DisableGutters="true">
        <MudIconButton Icon="@Icons.Material.Outlined.Menu" Color="MudBlazor.Color.Inherit" OnClick="@((e) => DrawerToggle())" Class="ml-3" />
            </MudToolBar>
        <MudSpacer />
        <MudIconButton Icon="fas fa-sign-out-alt" Color="MudBlazor.Color.Inherit" OnClick="@(()=>LogOut())" Title="Выход"/>
    </MudAppBar>
    
    
    
    <MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
        <CascadingValue Value="hubConnection">
            @ChildContent
        </CascadingValue>
    </MudContainer>
</MudMainContent>
